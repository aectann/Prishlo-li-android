<resources>
   	<style parent="Theme.Sherlock.Light" name="ActionBar">
		<item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
    </style>
    
    <style name="ActionBar.Title" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
    	<item name="android:textColor">@color/inversed_text_color</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:textSize">@dimen/text_size_big</item>
    </style>
    
    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/main_theme_color</item>
        <item name="android:background">@color/main_theme_color</item>
        <item name="titleTextStyle">@style/ActionBar.Title</item>
        <item name="android:titleTextStyle">@style/ActionBar.Title</item>
    </style>
    
    <style name="EmptyViewText">
    	<item name="android:gravity">center</item>
    	<item name="android:textColor">@color/main_theme_color</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:textSize">@dimen/text_size_big</item>
    </style>
    <style name="FormLabel">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="listItemPrimaryText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/main_theme_color</item>
        <item name="android:textSize">@dimen/list_item_primary_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="listItemSecondaryText">
        <item name="android:textColor">@color/secondary_theme_color</item>
        <item name="android:textSize">@dimen/list_item_secondary_text_size</item>
    </style>
</resources>
